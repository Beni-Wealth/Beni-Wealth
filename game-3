<body>
  <div class="wrap">
    <header>
      <div style="display:flex;gap:12px;align-items:center">
        <div class="logo">BW</div>
        <div>
          <div class="title">Memory Flip â€” You vs Bot</div>
          <div class="muted">Match pairs to score. Win to earn â‚¦50. Entry fee: â‚¦20.</div>
        </div>
      </div>

      <div class="controls">
        <div style="text-align:right">
          <div class="muted">Balance</div>
          <div id="balance" style="font-weight:800">â‚¦0.00</div>
        </div>
        <button id="playBtn" class="btn">Play (â‚¦20)</button>
        <button id="backBtn" class="btn ghost">Back</button>
      </div>
    </header>

    <div class="layout">
      <div class="left">
        <div class="card">
          <div style="display:flex;justify-content:space-between;align-items:center">
            <div style="font-weight:800">Game</div>
            <div class="muted small" id="turnIndicator">Not playing</div>
          </div>

          <div id="boardWrap">
            <div class="board" id="board"></div>
          </div>

          <div class="hud">
            <div class="scorebox">You: <span id="playerScore">0</span></div>
            <div class="scorebox">Bot: <span id="botScore">0</span></div>
            <div><button id="restartBtn" class="btn ghost">Restart</button></div>
          </div>

          <div class="muted-note" id="gameNote">Press Play to start (â‚¦20 will be charged).</div>
        </div>
      </div>

      <div class="right">
        <div class="card">
          <div style="font-weight:900">Game log</div>
          <div id="gamelog" class="log"><div class="muted">No activity yet</div></div>
        </div>

        <div class="card" style="margin-top:12px">
          <div style="font-weight:900">How it works</div>
          <div class="muted-note">
            - Click a tile to flip. Match two identical tiles to score 1 point. <br>
            - Players alternate turns; matches give an extra turn. <br>
            - If you win, â‚¦50 is credited to your balance automatically.
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- result modal -->
  <div id="modal" class="modal" role="dialog" aria-modal="true">
    <div class="panel">
      <div id="modalTitle" style="font-weight:900">Game over</div>
      <div id="modalBody" class="muted-note" style="margin-top:12px"></div>
      <div style="margin-top:12px" class="center">
        <button id="modalClose" class="btn">Close</button>
      </div>
    </div>
  </div>

  <script type="module">
    import { initializeApp, getApps, getApp } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js";
    import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js";
    import { getFirestore, doc, getDoc, collection, runTransaction, serverTimestamp, setDoc } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore.js";

    // --- Firebase config (your project) ---
    const firebaseConfig = {
      apiKey: "AIzaSyDy_L7uJeoaWXbUB-LVk_fBv8yHeRjNjZk",
      authDomain: "beni-wealths.firebaseapp.com",
      projectId: "beni-wealths",
      storageBucket: "beni-wealths.firebasestorage.app",
      messagingSenderId: "807950483822",
      appId: "1:807950483822:web:e10fa87307e041c4d8417f",
      measurementId: "G-Z2XP3YN6NS"
    };
    const app = getApps().length ? getApp() : initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // UI refs
    const playBtn = document.getElementById('playBtn');
    const backBtn = document.getElementById('backBtn');
    const restartBtn = document.getElementById('restartBtn');
    const balanceEl = document.getElementById('balance');
    const boardEl = document.getElementById('board');
    const playerScoreEl = document.getElementById('playerScore');
    const botScoreEl = document.getElementById('botScore');
    const gamelog = document.getElementById('gamelog');
    const turnIndicator = document.getElementById('turnIndicator');
    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modalTitle');
    const modalBody = document.getElementById('modalBody');
    const modalClose = document.getElementById('modalClose');
    const gameNote = document.getElementById('gameNote');

    // constants
    const ENTRY_FEE = 20;
    const WIN_REWARD = 50;

    // local game state
    let currentUser = null;
    let userBalance = 0;
    let gameIdRef = null; // doc ref for this game in memoryGames
    let tiles = []; // array of objects { id, value, flipped, matched }
    let firstFlip = null;
    let secondFlip = null;
    let lockBoard = true; // until play pressed
    let playerScore = 0;
    let botScore = 0;
    let turn = 'none'; // 'player' or 'bot'
    let botMemory = {}; // value -> array of indices where seen and not matched
    let remainingPairs = 0;

    // helpers
    function formatN(n){ return 'â‚¦' + Number(n||0).toLocaleString('en-NG', {minimumFractionDigits:2, maximumFractionDigits:2}); }
    function log(msg){
      const d = document.createElement('div');
      d.style.padding = '8px 0';
      d.innerHTML = msg;
      if(gamelog.firstChild && gamelog.firstChild.className === 'muted') gamelog.innerHTML = '';
      gamelog.prepend(d);
      // cap
      while(gamelog.children.length > 120) gamelog.removeChild(gamelog.lastChild);
    }
    function setStatus(text){ turnIndicator.textContent = text; }

    // fetch & display balance (best-effort)
    async function refreshBalanceDisplay(){
      if(!currentUser){ balanceEl.textContent = formatN(0); return; }
      try{
        const uRef = doc(db, 'users', currentUser.uid);
        const uSnap = await getDoc(uRef);
        if(uSnap.exists()){
          const d = uSnap.data(); userBalance = Number(d.balance ?? d.amount ?? 0) || 0;
        } else {
          const bRef = doc(db, 'balances', currentUser.uid);
          const bSnap = await getDoc(bRef);
          if(bSnap.exists()){ const d = bSnap.data(); userBalance = Number(d.balance ?? d.amount ?? 0) || 0; }
          else userBalance = 0;
        }
      }catch(e){ console.warn('balance read failed', e); }
      balanceEl.textContent = formatN(userBalance);
    }

    // create shuffled tiles with N pairs (default 8 tiles -> 4 pairs or 12 -> 6 pairs)
    function setupTiles(pairs = 6){
      // create values as simple emojis or letters for clarity
      const values = ['ðŸŽ','ðŸŒ','ðŸ‡','ðŸ’','ðŸ‹','ðŸ‰','ðŸ“','ðŸ','ðŸ‘','ðŸ¥','ðŸ¥­','ðŸ','ðŸŒ½','ðŸ¥•'];
      const use = values.slice(0,pairs);
      const paired = [...use, ...use];
      // shuffle
      for(let i = paired.length -1; i>0; i--){
        const j = Math.floor(Math.random() * (i+1));
        [paired[i], paired[j]] = [paired[j], paired[i]];
      }
      tiles = paired.map((v, idx) => ({ id: idx, value: v, flipped:false, matched:false }));
      remainingPairs = pairs;
      firstFlip = null; secondFlip = null; lockBoard = false;
      playerScore = 0; botScore = 0;
      botMemory = {};
      renderBoard();
      updateScores();
      setStatus('Your turn');
      turn = 'player';
      log(`<div style="color:lightgreen">Game started â€” pairs: ${pairs}</div>`);
    }

    function renderBoard(){
      boardEl.innerHTML = '';
      tiles.forEach((t, idx) => {
        const el = document.createElement('div');
        el.className = 'tile' + (t.flipped ? ' flipped' : '') + (t.matched ? ' matched' : '');
        el.dataset.index = idx;
        el.innerHTML = t.flipped || t.matched ? `<div>${t.value}</div>` : `<div style="font-size:18px;color:var(--muted)">?</div>`;
        el.addEventListener('click', onTileClick);
        boardEl.appendChild(el);
      });
    }

    function updateScores(){
      playerScoreEl.textContent = String(playerScore);
      botScoreEl.textContent = String(botScore);
    }

    // tile click handler (user)
    function onTileClick(e){
      if(lockBoard) return;
      if(turn !== 'player') return;
      const idx = Number(e.currentTarget.dataset.index);
      const tile = tiles[idx];
      if(tile.flipped || tile.matched) return;

      flipTile(idx, 'player');
    }

    function flipTile(idx, by){
      const tile = tiles[idx];
      tile.flipped = true;
      renderBoard();
      // remember for bot memory if human flips
      if(by === 'player' || by === 'bot'){
        if(!tile.matched){
          botMemory[tile.value] = botMemory[tile.value] || new Set();
          botMemory[tile.value].add(idx);
        }
      }

      if(firstFlip === null){ firstFlip = idx; return; }
      if(secondFlip === null && idx !== firstFlip){ secondFlip = idx; lockBoard = true; checkMatch(by); }
    }

    async function checkMatch(by){
      const a = tiles[firstFlip];
      const b = tiles[secondFlip];
      const isMatch = a.value === b.value;
      if(isMatch){
        // mark matched
        a.matched = b.matched = true;
        remainingPairs--;
        if(by === 'player') { playerScore++; log(`<div>You matched ${a.value} â€” +1</div>`); } 
        else { botScore++; log(`<div style="color:orange">Bot matched ${a.value} â€” +1</div>`); }

        // remove matched indices from bot memory
        if(botMemory[a.value]) { botMemory[a.value].delete(firstFlip); botMemory[a.value].delete(secondFlip); if(botMemory[a.value].size===0) delete botMemory[a.value]; }

        updateScores();
        // reset flips after short pause then continue same player's turn (matches give extra turn)
        setTimeout(()=> {
          firstFlip = null; secondFlip = null; lockBoard = false;
          renderBoard();
          if(remainingPairs <= 0) finishGame();
          else {
            if(by === 'player'){ setStatus("Your turn â€” you scored a match"); } else { setStatus("Bot's turn â€” bot scored a match"); botTurn(); }
          }
        }, 900);
      } else {
        // not matched â€” show for a short while then flip back
        if(by === 'player') log(`<div>Wrong â€” ${a.value} â‰  ${b.value}</div>`); else log(`<div style="color:orange">Bot missed â€” ${a.value} â‰  ${b.value}</div>`);
        setTimeout(()=> {
          a.flipped = false; b.flipped = false;
          // bot memory: both seen but not matched (they already added on flip)
          firstFlip = null; secondFlip = null;
          renderBoard();
          // switch turn
          if(by === 'player'){ turn = 'bot'; setStatus("Bot's turn"); botTurn(); } else { turn = 'player'; setStatus("Your turn"); }
          lockBoard = false;
        }, 900);
      }
    }

    // BOT logic: medium-smart bot with memory
    async function botTurn(){
      if(remainingPairs <= 0) return;
      turn = 'bot';
      lockBoard = true;
      setStatus("Bot is thinking...");
      await sleep(600);

      // 1) if bot knows a matching pair from memory, pick it
      for(const val in botMemory){
        const idxs = Array.from(botMemory[val]);
        // remove already matched indices
        const usable = idxs.filter(i => !tiles[i].matched);
        if(usable.length >= 2){
          // pick first two
          await botFlipSequence(usable[0], usable[1]);
          return;
        }
      }

      // 2) If bot knows one index of a value, flip it then try to find its match by scanning unseen tiles
      for(const val in botMemory){
        const idxs = Array.from(botMemory[val]).filter(i=> !tiles[i].matched);
        if(idxs.length === 1){
          const knownIdx = idxs[0];
          // pick a random unrevealed tile which is not knownIdx and not matched
          const candidate = tiles.map((t,i)=> i).filter(i=> !tiles[i].matched && i !== knownIdx && !tiles[i].flipped);
          if(candidate.length>0){
            const pick = candidate[Math.floor(Math.random()*candidate.length)];
            await botFlipSequence(knownIdx, pick);
            return;
          }
        }
      }

      // 3) Otherwise pick two random unrevealed tiles (random but avoid ones already seen if possible)
      const unseen = tiles.map((t,i)=> i).filter(i => !tiles[i].matched && !tiles[i].flipped);
      if(unseen.length === 0){ // defensive
        turn = 'player'; lockBoard = false; setStatus("Your turn"); return;
      }
      // try to prioritize tiles bot hasn't seen (not present in memory)
      const notSeen = unseen.filter(i => {
        const v = tiles[i].value; return !botMemory[v] || botMemory[v].size === 0;
      });
      let pickA, pickB;
      if(notSeen.length >= 2){
        pickA = notSeen[Math.floor(Math.random()*notSeen.length)];
        // remove pickA for pickB selection
        const rem = notSeen.filter(i=> i !== pickA);
        pickB = rem[Math.floor(Math.random()*rem.length)];
      } else {
        // fallback: any two unseen
        pickA = unseen[Math.floor(Math.random()*unseen.length)];
        const rem = unseen.filter(i => i !== pickA);
        pickB = rem[Math.floor(Math.random()*rem.length)];
      }
      await botFlipSequence(pickA, pickB);
    }

    // bot flipping sequence (reveals one, waits, reveals second)
    async function botFlipSequence(i1, i2){
      await sleep(350);
      flipTile(i1, 'bot');
      await sleep(700);
      flipTile(i2, 'bot');
      // checkMatch is triggered automatically since flipTile sets secondFlip and lockBoard
      // but ensure checkMatch has time to run â€” function flow will handle it
    }

    // helper
    function sleep(ms){ return new Promise(r=>setTimeout(r,ms)); }

    // game completion
    async function finishGame(){
      lockBoard = true;
      setStatus('Game complete');
      log(`<div style="font-weight:900">Final â€” You: ${playerScore} â€” Bot: ${botScore}</div>`);
      // create or update server game doc to completed and credit if player won
      // if no server-side game was created earlier (should be created at Play), still attempt credit/deduction logic accurately
      const didUserWin = playerScore > botScore;
      if(didUserWin){
        // credit WIN_REWARD to player via transaction
        setStatus('You won â€” crediting reward...');
        try {
          await runTransaction(db, async (tx) => {
            const uRef = doc(db, 'users', currentUser.uid);
            const bRef = doc(db, 'balances', currentUser.uid);
            // get both to decide which exists
            const uSnap = await tx.get(uRef);
            const bSnap = await tx.get(bRef);
            let balance = 0;
            let targetRef = uRef;
            if(uSnap.exists()){
              balance = Number(uSnap.data().balance ?? uSnap.data().amount ?? 0) || 0;
              targetRef = uRef;
            } else if(bSnap.exists()){
              balance = Number(bSnap.data().balance ?? bSnap.data().amount ?? 0) || 0;
              targetRef = bRef;
            } else {
              balance = 0; targetRef = uRef;
            }
            // credit
            const newBal = balance + WIN_REWARD;
            tx.set(targetRef, { balance: newBal }, { merge: true });
            // record game doc if available: memoryGames/{id}
            if(gameIdRef){
              const gRef = doc(db, 'memoryGames', gameIdRef.id);
              tx.set(gRef, {
                userId: currentUser.uid,
                entryFee: ENTRY_FEE,
                result: 'win',
                playerScore,
                botScore,
                completedAt: serverTimestamp()
              }, { merge: true });
            }
          });
          log(`<div style="color:lightgreen">Credited ${formatN(WIN_REWARD)} to your account.</div>`);
          await refreshBalanceDisplay();
        } catch(err){
          console.error('credit failed', err);
          log(`<div style="color:orange">Failed to credit reward: ${err.message || err}</div>`);
        }
      } else {
        // no reward; just update game doc if any
        if(gameIdRef){
          try {
            await setDoc(doc(db, 'memoryGames', gameIdRef.id), {
              userId: currentUser.uid,
              entryFee: ENTRY_FEE,
              result: playerScore > botScore ? 'win' : (playerScore === botScore ? 'draw' : 'lose'),
              playerScore,
              botScore,
              completedAt: serverTimestamp()
            }, { merge: true });
          } catch(e){
            console.warn('update game doc failed', e);
          }
        }
      }

      // show modal summary
      modalTitle.textContent = didUserWin ? 'You won!' : (playerScore === botScore ? 'Draw' : 'You lost');
      modalBody.innerHTML = `Final score â€” You: <strong>${playerScore}</strong> â€¢ Bot: <strong>${botScore}</strong>${didUserWin ? `<div style="margin-top:8px;color:lightgreen">â‚¦${WIN_REWARD} credited to your account.</div>` : ''}`;
      modal.style.display = 'flex';
      lockBoard = true;
      turn = 'none';
    }

    // Play button: charge entry fee and create memoryGames doc inside transaction
    playBtn.addEventListener('click', async () => {
      if(!currentUser){ alert('Sign in on the main site first.'); return; }
      if(!confirm(`Start a Memory game? â‚¦${ENTRY_FEE} will be deducted.`)) return;

      playBtn.disabled = true;
      gameNote.textContent = 'Charging entry fee...';

      // prepare doc ref for this game record
      const gamesCol = collection(db, 'memoryGames');
      const newGameRef = doc(gamesCol);
      gameIdRef = newGameRef; // keep locally so we can update on finish

      try {
        await runTransaction(db, async (tx) => {
          const uRef = doc(db, 'users', currentUser.uid);
          const bRef = doc(db, 'balances', currentUser.uid);
          // read both first
          const uSnap = await tx.get(uRef);
          const bSnap = await tx.get(bRef);
          let balance = 0;
          let targetRef = uRef;
          if(uSnap.exists()){
            balance = Number(uSnap.data().balance ?? uSnap.data().amount ?? 0) || 0;
            targetRef = uRef;
          } else if(bSnap.exists()){
            balance = Number(bSnap.data().balance ?? bSnap.data().amount ?? 0) || 0;
            targetRef = bRef;
          } else {
            balance = 0; targetRef = uRef;
          }
          if(balance < ENTRY_FEE) throw new Error('insufficient-funds');
          const newBal = balance - ENTRY_FEE;
          // now perform writes (after reads)
          tx.set(targetRef, { balance: newBal }, { merge: true });
          tx.set(newGameRef, {
            userId: currentUser.uid,
            entryFee: ENTRY_FEE,
            startedAt: serverTimestamp(),
            status: 'started'
          });
        });

        // success: update local UI balance and start the game
        await refreshBalanceDisplay();
        gameNote.textContent = 'Game in progress';
        setupTiles(6); // 6 pairs => 12 tiles
        playBtn.disabled = false;
      } catch(err){
        console.error('entry charge failed', err);
        playBtn.disabled = false;
        gameNote.textContent = 'Could not start game';
        if(err.message && err.message.includes('insufficient-funds')) alert('Insufficient funds. Please recharge to play.');
        else alert('Could not charge entry fee: ' + (err.message || err));
        await refreshBalanceDisplay();
      }
    });

    // restart (local)
    restartBtn.addEventListener('click', ()=>{
      if(!confirm('Restart the board? This will not refund entry fee.')) return;
      setupTiles(6);
    });

    // back
    backBtn.addEventListener('click', ()=> { window.location.href = 'mini-games.html'; });

    // modal close
    modalClose.addEventListener('click', ()=> { modal.style.display = 'none'; });

    // onAuth set currentUser and refresh balance
    onAuthStateChanged(auth, async (user) => {
      currentUser = user;
      await refreshBalanceDisplay();
      if(!user) {
        setStatus('Sign in on the main site to play');
        playBtn.disabled = true;
      } else {
        setStatus('Ready â€” press Play to start');
        playBtn.disabled = false;
      }
    });

    // initialize empty board disabled until play
    (function initEmpty(){
      boardEl.innerHTML = '';
      for(let i=0;i<12;i++){
        const el = document.createElement('div'); el.className='tile'; el.innerHTML = '<div style="font-size:18px;color:var(--muted)">?</div>';
        boardEl.appendChild(el);
      }
      playerScore = 0; botScore = 0; updateScores();
    })();

  </script>
</body>
</html>
